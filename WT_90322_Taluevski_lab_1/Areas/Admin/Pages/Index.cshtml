@page
@model WT_90322_Taluevski_lab_1.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].CarName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Description)
            </th>
            <th>
                Price @*@Html.DisplayNameFor(model => model.Car[0].HorsePower)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Car) {
        <tr>
            <td>
                <img src="~/Images/@item.Image" alt="NoImage" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorsePower)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.CarGroupId)
            </td>
            <td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CarId"
                   class="btn btn-outline-info">
                    <span class="fas fa-edit"></span></a>
                <a asp-page="./Delete" asp-route-id="@item.CarId"
                   class="btn btn-outline-danger">
                    <span class="fas fa-trash-alt"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
